<% include ../partials/header %>
        <!-- Search form -->
        <div id="search-box">
            <form action="" method="post">
                <input type="text" placeholder="Search...">
                <button><img src="/images/ic-search.svg" alt=""></button>
            </form>
        </div>
        <!-- Cards -->
        <% if(currentUser){ %>
        <div class="center">
            <a href="/recipes/new" class="btn-primary">Add new <img src="/images//plus.svg" alt=""></a>
        </div>
        <% } %>
        <div class="card-container">
            <% for(let i = recipes.length - 1; i >= 0; i--){ %>
                <a href="/recipes/<%= recipes[i]._id %>">
                <div class="card">
                    <img class="card-image" src="<%= recipes[i].image %>" alt="">
                    <div class="time">
                        <Strong><%= recipes[i].time %></Strong>
                        <span><img src="/images/fa-solid_clock.svg" alt=""></span>
                    </div>  
                    <div class="card-rating">
                        <span><img src="/images/Star.svg" alt=""></span>
                        <span><img src="/images/Star.svg" alt=""></span>
                        <span><img src="/images/Star.svg" alt=""></span>
                        <span><img src="/images/Star.svg" alt=""></span>
                        <span><img src="/images/Star.svg" alt=""></span>
                    </div>
                    <div class="card-title">
                        <h2><%= recipes[i].name %></h2>
                    </div>
                </div>
                </a>
            <% } %>
        </div>


    <% include ../partials/footer %>