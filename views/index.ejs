<% include ./partials/header %>
        <!-- Search form -->
        <div id="search-box">
            <form action="/recipes" method="get">
                <input type="text" name="search" placeholder="Search recipes...">
                <button><img src="/images/ic-search.svg" alt=""></button>
            </form>
        </div>
        <!-- Cards -->
        <% if(currentUser){ %>
        <div class="container-center">
            <a href="/recipes/new" class="btn-primary text-bold margin-y">Add new <img src="/images//plus.svg" alt=""></a>
        </div>
        <% } %>
        <div class="card-container">
            <% let showAmountOfTimes = 8 %>
            <% for(let i = recipes.length - 1; i >= 0; i--){ 
                if( showAmountOfTimes != 0){%>
                <a href="/recipes/<%= recipes[i]._id %>">
                    <div class="card">
                        <img class="card-image" src="<%= recipes[i].image %>" alt="">
                        <div class="card-rating">
                            <Strong><%= recipes[i].rating %>/5</Strong>
                            <span>â˜…</span>
                        </div> 
                        <div class="card-title">
                            <h2><%= recipes[i].name %></h2>
                        </div>
                    </div>
                </a>
                <% showAmountOfTimes = showAmountOfTimes -1; } %>
            <% } %>
        </div>
        <!-- View more  -->
        
        <div id="view-more">
            <div></div>
            <button class="btn-primary"><a href="/recipes">View more</a></button>
            <a id="arrow-down" href="/recipes"><img src="/images/arrow-down.svg" alt=""></a>
        </div>
        


    <% include ./partials/footer %>